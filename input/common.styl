.full-screen
	// position relative
	// position fixed
	// top 0
	// bottom 0
	// left 0
	// right 0
	.wrap
		position fixed
		top 50%
		left 50%
		transform translate(-50%, -50%)
		max-width 1628px
		width 95%
		box-sizing border-box
		background #fff
		border-radius 5px
		z-index 12
		display none
		@media(max-width 1500px)
			max-width 1200px
		@media(max-width 800px)
			padding 15px
	.close
		position absolute
		top 40px
		right 40px
		width 58px
		z-index 100
		padding 10px
		@media(max-width 1500px)
			top 30px
			right 30px
			width 50px
		@media(max-width 800px)
			right 20px
			top 20px
			width 30px
		img
			display block
			width 100%
	.content
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		margin 0 auto
		&:focus
			border none
			outline none
		@media(max-width 1100px)
			flex-direction column
			max-height 80vh
			overflow scroll
			padding-top 5vh
			-webkit-overflow-scrolling touch
			// &::-webkit-scrollbar
			// 	display none
		@media(max-width 800px)
			padding-top 0
			display block
		.text
			flex 0 0 64%
			width 100%
			padding 70px
			box-sizing border-box
			@media(max-width 1500px)
				padding 50px
			@media(max-width 1100px)
				flex 0 0 100%
			@media(max-width 800px)
				padding 0
			h3
				font-size 38px
				color #282828
				line-height 70px
				padding-bottom 40px
				@media(max-width 1500px)
					font-size 30px
					line-height 40px
				@media(max-width 800px)
					padding-bottom 15px
					font-size 30px
			p
				font-size 24px
				color #282828
				line-height 50px
				@media(max-width 1500px)
					line-height 40px
				@media(max-width 1100px)
					line-height 50px
				@media(max-width 1100px)
					font-size 20px
					line-height 1.5
		.pic
			flex 0 0 36%
			display block
			@media(max-width 1100px)
				flex 0 0 100%
				max-width 100%
			img
				display block
				max-width 600px
				width 100%
				margin 0 auto
				@media(max-width 800px)
					max-width 400px

