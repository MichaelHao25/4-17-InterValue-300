body
	font-family myFont,arial,misrosoftYahei
.maxw1400
	max-width 1400px
	margin 0 auto
	@media(max-width 1400px)
		padding 0 15px
.header
	position fixed
	top 0
	left 0
	right 0
	background #fff
	z-index 10
	box-shadow 0 0 3px #ccc
	.maxw1400
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		align-items center
		height 90px
		@media(max-width 1080px)
			height 60px
	a
		display block
	.brand
		img
			max-width 55px
			@media(max-width 1080px)
				max-width 40px
	.nav
		height @height
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		align-items center
		justify-content flex-end
		a
			margin 0 10px
			padding 0 12px
			font-size 14px
			color #fff
			line-height 28px
			background #3d3939
			border-radius 5px
		.toggle-menu
			margin-left 30px
			display block

.main
	.banner
		padding-top 90px
		height 835px
		box-sizing border-box
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		align-items center
		justify-content center
		background #1c1c1c url() center top no-repeat
		color #fff
		line-height 1
		text-align center
		@media(max-width 1080px)
			padding-top 60px
		@media(max-width 720px)
			height 600px
		h2
			font-size 88px
			padding-bottom 140px
			font-weight bold
			@media(max-width 720px)
				font-size 60px
				padding-bottom 50px
		h4
			padding-bottom 29px
			font-size 20px
			@media(max-width 720px)
				font-size 16px
			@media(max-width 600px)
				font-size 12px
				line-height 1.5
		p
			font-size 24px
			padding-bottom 12px
			font-weight bold
			@media(max-width 720px)
				font-size 20px
			@media(max-width 600px)
				font-size 16px
				line-height 1.5
		h5
			padding-top 18px
			font-size 22px
			padding-bottom 50px
			@media(max-width 720px)
				font-size 18px
			@media(max-width 600px)
				font-size 14px
				line-height 1.5
		a
			width 300px
			height 56px
			font-size 18px
			text-align center
			line-height @height
			border 1px solid #fff
			transition 0.3s
			border-radius 8px
			&:hover
				background #2fa1d2
				border-color #2fa1d2
			// @media(max-width 1080px)
			// 	width 240px
			// 	height 50px
			// 	line-height @height
	
	.key-features
		h3
			font-size 38px
			color #282828
			padding 105px 0
			text-align center
		.list
			max-width calc(445px * 4)
			width 100%
			margin 0 auto
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			justify-content center
			flex-wrap wrap
			align-content center
			.item
				position relative
				flex 0 0 25%
				height 445px
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				align-items center
				justify-content center
				flex-direction column
				transition 0.3s
				@media(max-width 1500px)
					flex 0 0 33.33%
				@media(max-width 1200px)
					flex 0 0 50%
				@media(max-width 700px)
					flex 0 0 100%
				&:hover
					.layout
						background #2fa1d2		
						&>*
							transform translateY(0)
							opacity 1
				.pic
					height 140px
					width 140px
					display -webkit-flex
					display -moz-flex
					display -ms-flex
					display -o-flex
					display flex
					align-items center
					justify-content center
				.title
					padding-top 30px
					text-align center
					font-size 18px
					color #282828
					line-height 2
					h4
						font-weight bold
				.layout
					position absolute
					top 0
					bottom 0
					left 0
					right 0
					display -webkit-flex
					display -moz-flex
					display -ms-flex
					display -o-flex
					display flex
					align-items center
					justify-content center
					flex-direction column
					color #fff
					background rgba(0,0,0,0)
					transition 0.3s
					&>*
						transition 0.3s
						transform translateY(30px)
						opacity 0
					img
						max-width 40px
						display block
						margin-bottom 30px
					h3
						font-size 18px
						line-height 2
						padding 0
						margin 0
						color #fff
					p
						max-width 90%
						margin 0 auto
						padding-top 50px
						text-align center
						font-size 14px
						line-height 22px
	
	.common-industry-support
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content center
		align-items center
		height 195px
		border-top 1px solid #e1e1e1
		border-bottom 1px solid #e1e1e1
		@media(max-width 500px)
