	.white-paper
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content center
		align-items center
		height 270px
		background #eeeff3 url('../img/f2f05ea7e2544b72e64006fd0836c269.png') center top no-repeat
		@media(max-width 500px)
			height 150px
		a
			width 300px
			height 56px
			border 1px solid #2fa1d2
			line-height 56px
			text-align center
			color #2fa1d2
			border-radius 5px
			font-weight bold
			transition 0.3s
			border-radius 8px
			&:hover
				color #fff
				background #2fa1d2
	.ecology
		background #1f1f1f url('../img/8b8dd65be7e34b553b5fab1862d91682.jpg') center top no-repeat
		text-align center
		h3
			padding 120px 0
			font-size 38px
			color #fff
			@media(max-width 1100px)
				padding 50px
			@media(max-width 800px)
				font-size 20px
		.pic
			padding-bottom 150px
			@media(max-width 1100px)
				padding-bottom 80px
			img
				display block
				margin 0 auto
				max-width 1054px
				width 100%
				@media(max-width 1100px)
					padding 0 15px
					box-sizing border-box
	.roadmap
		h3
			font-size 28px
			color #282828
			line-height 1
			padding 120px 0
			text-align center
			@media(max-width 1100px)
				padding 50px 0
			@media(max-width 800px)
				font-size 20px
		.pic
			padding-bottom 170px
			@media(max-width 1100px)
				padding-bottom 80px
			img
				display block
				margin 0 auto
				max-width 1550px
				width 100%
				@media(max-width 1600px)
					padding 0 15px
					box-sizing border-box
				
	.bg
		background linear-gradient(to right,#1d1d1d 50%,#ffff 50%) left top/100% 100% no-repeat
		@media(max-width 1800px)
			background #1d1d1d
	.hcl-row
		max-width calc(445px * 4)
		width 100%
		margin 0 auto
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex			
		flex-wrap wrap
		.hcl-column
			flex 0 0 50%
			max-width 890px
			width 100%
			@media(max-width 1800px)
				flex 0 0 100%
				max-width 100%
				padding-bottom 100px
			&+.hcl-column
				background #fff
				@media(max-width 1800px)
					padding-bottom 0
				h3
					color #282828
				.item
					h4
					p
					a
						color #282828
					a
						border 1px solid #282828
			h3
				padding-top 100px
				text-transform uppercase
				font-size 38px
				color #fff
				font-weight normal
				text-align center
				line-height 1
				@media(max-width 800px)
					font-size 20px
					padding-top 50px
			.wrap
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				width 100%
				flex-wrap wrap
				.item
					flex 0 0 33.33%
					@media(max-width 900px)
						flex 0 0 50%
					@media(max-width 600px)
						flex 0 0 100%
			.swiper-container
				padding-bottom 120px
			.swiper-pagination
				font-size 0
				bottom 50px
				span
					width 18px
					height 18px
					opacity 1
					background #c3c3c3
					&.swiper-pagination-bullet-active
						background #3d3939
			@media(max-width 600px)
				.swiper-slide-active
					.item
						.pic
							img
								transform-origin center bottom
								transform scale(1.2,1.2)
								filter grayscale(0)	
								transition 0.3s 0.3s
			.item
				padding-top 95px
				text-align center
				color #fff
				cursor pointer
				@media(max-width 800px)
					padding-top 50px
				// &:hover
				// 	.pic
				// 		img
				.pic
					img
						display block
						max-width 160px
						width 100%
						margin 0 auto
						filter grayscale(1)
						transition 0.3s
						border-radius 50%
						&:hover
							transform-origin center bottom
							transform scale(1.2,1.2)
							filter grayscale(0)	
				h4
					font-size 18px
					line-height 1
					padding 20px 0
				p
					font-size 14px
					line-height 1.5
				a
					display block
					margin 30px auto 0
					width 100px
					height 28px
					font-size 14px
					line-height 28px
					text-align center
					border 1px solid #fff
					transition 0.3s
					border-radius 5px
					&:hover
						background #2fa1d2
						border-color #2fa1d2
						color #fff

